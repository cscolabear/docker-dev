/var/log/nginx/*.log {
    create 0640 www-data www-data
    daily
    dateext
    dateformat -%Y%m%d
    size 1.5M
    missingok
    rotate 4
    compress
    delaycompress
    notifempty
    sharedscripts
    postrotate
            [ -f /usr/logs/nginx.pid ] && kill -USR1 `cat /usr/logs/nginx.pid`
    endscript
    su root adm
}
